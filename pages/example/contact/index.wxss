.main {
    margin-bottom: 30px;
    font-family: "Helvetica Neue", "Hiragino Sans GB", "Microsoft YaHei", "\9ED1\4F53", Arial, sans-serif;
    font-size: 30rpx;
    color: #888;
}

.map {
    width: 100%;
    height: 300px;
    border-bottom: 2px solid #eee
}

.mcname {
    height: 100rpx;
    font-size: 39rpx;
    font-weight: bold;
    line-height: 100rpx;
    text-align: center;
    margin-top: 30rpx;
    color: #888
}

.mcinfo {
    font-size: 30rpx;
    min-height: 100rpx;
    line-height: 100rpx;
    border: 1px solid #eee;
    border-radius: 3px;
    width: 94%;
    word-break: break-all;
    margin: auto;
    color: #999;
    background: #fff;
    display: flex;
    flex-wrap: nowrap;
    align-items: center;
    padding-right: 4px;
}
.mcinfoW {
    font-size: 30rpx;
    min-height: 100rpx;
    line-height: 50rpx;
    border: 1px solid #eee;
    border-radius: 3px;
    width: 94%;
    word-break: break-all;
    margin: auto;
    color: #999;
    background: #fff
}

.mctlt {
    width: 28%;
    flex-shrink: 0;
    text-align: right;
    padding-left: 5px;
    font-size: 30rpx;
    float: left;
}

.mcval {
    /* width: 70%; */
    flex: 1;
    vertical-align: middle;
    font-size: 30rpx;
    float: left;
}

.mcvalW {
    width: 70%;
    vertical-align: middle;
    font-size: 30rpx;
    float: left;
}

.banner image {
    width: 100%;
    height: 400rpx;
}

