<!--pages/addressMgt/addressMgt.wxml-->
<view class="container">
    <view class="page">
   
        <view wx:for="{{adresses}}" wx:key="aid"> 
            
                <!--<view class="lt">
                    <image src="{{item.thumb}}" />
                </view>-->
                <view class="rt">
                    <view class="price">{{item.aname}}</view>
                    <view class="name">
                        联系电话: 
                        <text class="money">{{item.atelephone}}</text>
                        
                    </view>
                    <view class="name">
                        街道-门牌号等详细信息:
                        <text class="money">{{item.aadress}}</text>
                    </view>

                     <view class="name">
                    <navigator url="/pages/adressDetail/index?id={{item.aid}}">
                      <view style="border:1rpx solid {{color}};color:{{color}};" class="baoming">
                        编辑
                      </view>
                     </navigator>
                     </view>

                     <view class="name">
                    <navigator url="/pages/coursedetail/index?id={{item.id}}">
                      <view style="border:1rpx solid {{color}};color:{{color}};" class="baoming">
                        删除
                      </view>
                   </navigator>
                   </view>
                  


                  </view>
                    
            <view class="line"></view>
        </view>
    </view>
</view>